{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.js",
    "css": "src/app/(frontend)/globals.css",
    "baseColor": "gray",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "@/app/(frontend)/[locale]/_components",
    "utils": "@/app/(frontend)/[locale]/_utils",
    "ui": "@/app/(frontend)/[locale]/_components/ui",
    "lib": "@/app/(frontend)/[locale]/_lib",
    "hooks": "@/app/(frontend)/[locale]/_hooks"
  },
  "iconLibrary": "lucide"
}
